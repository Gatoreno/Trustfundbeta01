
  {{#if success }}
  <div class="container p-4">
    <div class="row">
      <div class="col-4 col-sm-4 col-xs-4 col-md-4  pull-right ">
        <div class="alert alert-success alert-dismissable  p-2 float-right" role="alert">
          {{success}}

          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hiden="true">
              &times;
            </span>
          </button>
        </div>
      </div>
    </div>
  </div>
  {{/if}}



  {{#if message }}
  <div class="container p-4">
    <div class="row">
  		<div class="col-4 col-sm-4 col-xs-4 col-md-4  pull-right ">
			<div class="alert alert-success alert-dismissable  show   p-2 float-right" role="alert">          {{message}}

          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hiden="true">
              &times;
            </span>
          </button>
        </div>
      </div>
    </div>
  </div>
  {{/if}}


